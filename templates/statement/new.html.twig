{% macro countries(land) %}
    <div class="row">
        <div class="col">
            {% set addr = land ~ 'Address' %}
            {{ form_row(form.addr) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.landCountry) }}
        </div>
        <div class="col">
            {{ form_row(form.landRegion) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.landCity) }}
        </div>
        <div class="col">
            {{ form_row(form.landPostal) }}
        </div>
    </div>
{% endmacro %}

{% block title %}Заява на розробку документації із землеустрою{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('map') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('map') }}
{% endblock %}

{% block body %}
    {% include('statement/header.html.twig') %}

    <div class="app-wrapper">

        <div class="app-content pt-3 p-md-3 p-lg-4">
            <div class="container-xl">
                {% if not is_granted('ROLE_USER') %}
                    {% include('statement/alertcard.html.twig') %}
                {% endif %}
                <h1 class="app-page-title">Заява на розробку документації із землеустрою</h1>
                {{ form_start(form) }}
                <div class="app-card shadow-sm mb-4 border-left-decoration">
                    <div class="inner">
                        <div class="app-card-body p-3 p-lg-4">
                            <h3 class="mb-3">Заявник</h3>
                            <div class="row gx-5 gy-3">
                                <div class="col-12 col-lg-9">
                                    <div class="row">
                                        <div class="col">
                                            {{ form_row(form.applicantLastname) }}
                                        </div>
                                        <div class="col">
                                            {{ form_row(form.applicantFirstname) }}
                                        </div>
                                        <div class="col">
                                            {{ form_row(form.applicantMiddlename) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-8">
                                            {{ form_row(form.phoneNumber) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-8">
                                            {{ form_row(form.email) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_row(form.applicantStreetAddress) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_row(form.country) }}
                                        </div>
                                        <div class="col">
                                            {{ form_row(form.region) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_row(form.city) }}
                                        </div>
                                        <div class="col">
                                            {{ form_row(form.postal) }}
                                        </div>
                                    </div>
                                </div><!--//col-->
                            </div><!--//row-->
                        </div><!--//app-card-body-->

                    </div><!--//inner-->
                </div><!--//app-card-->

                <div class="app-card shadow-sm mb-4 border-left-decoration">
                    <div class="inner">
                        <div class="app-card-body p-3 p-lg-4">
                            <h3 class="mb-3">Ділянка</h3>
                            <div class="row gx-5 gy-3">
                                <div class="col-12 col-lg-9">
                                    <div class="row">
                                        <div class="col">
                                            {{ form_row(form.landAddress) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_row(form.landCountry) }}
                                        </div>
                                        <div class="col">
                                            {{ form_row(form.landRegion) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_row(form.landCity) }}
                                        </div>
                                        <div class="col">
                                            {{ form_row(form.landPostal) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-8">
                                            <div id="map" class="map"></div>
                                            {{ form_row(form.geom) }}
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col col-8 form-switch">
                                            {{ form_row(form.planingDocumentation) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-6">
                                            {{ form_row(form.cadastreNumber) }}
                                        </div>
                                    </div>

                                    {{ form_row(form.area) }}
                                    {{ form_row(form.purpose) }}
                                    {{ form_row(form.use) }}
                                    {{ form_row(form.typeDocumentation) }}

                                </div><!--//col-->
                            </div><!--//row-->
                        </div><!--//app-card-body-->
                    </div><!--//inner-->
                </div><!--//app-card-->

                <div class="app-card shadow-sm mb-4 border-left-decoration">
                    <div class="inner">
                        <div class="app-card-body p-3 p-lg-4">
                            <div class="row gx-5 gy-3">
                                <div class="col-12 col-lg-9">
                                    <div class="row">
                                        <div class="col">
                                            {{ form_rest(form) }}
                                        </div><!--//col-->
                                    </div><!--//row-->
                                </div><!--//app-card-body-->
                            </div><!--//inner-->
                        </div><!--//app-card-->
                    </div>
                </div>
                {{ form_end(form) }}
            </div><!--//container-fluid-->
        </div><!--//app-content-->

        {% include('statement/footer.html.twig') %}

    </div><!--//app-wrapper-->
{% endblock %}
