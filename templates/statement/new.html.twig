{% extends 'base.html.twig' %}

{% block title %}Hello StatementController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('map') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('map') }}
{% endblock %}

{% block body %}
    {% include('statement/header.html.twig') %}

    <div class="app-wrapper">

        <div class="app-content pt-3 p-md-3 p-lg-4">
            <div class="container-xl">

                <h1 class="app-page-title">Заява на розробку документації із землеустрою</h1>
                <div class="app-card shadow-sm mb-4 border-left-decoration">
                    <div class="inner">
                        <div class="app-card-body p-3 p-lg-4">
                            <h3 class="mb-3">Заявник</h3>
                            <div class="row gx-5 gy-3">
                                <div class="col-12 col-lg-9">

                                    {{ form_start(form) }}
                                    <div class="row">
                                        <div class="col">
                                            <label class="form-label">&nbsp;</label>
                                            {{ form_widget(form.applicantLastname) }}
                                        </div>
                                        <div class="col">
                                            <label class="form-label">&nbsp;</label>
                                            {{ form_widget(form.applicantFirstname) }}

                                        </div>
                                        <div class="col">
                                            <label class="form-label">&nbsp;</label>
                                            {{ form_widget(form.applicantMiddlename) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-8">
                                            {{ form_label(form.phoneNumber) }}
                                            {{ form_widget(form.phoneNumber) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-8">
                                            {{ form_label(form.email) }}
                                            {{ form_widget(form.email) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_label(form.applicantStreetAddress) }}
                                            {{ form_widget(form.applicantStreetAddress) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_label(form.country) }}
                                            {{ form_widget(form.country) }}
                                        </div>
                                        <div class="col">
                                            {{ form_label(form.region) }}
                                            {{ form_widget(form.region) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_label(form.city) }}
                                            {{ form_widget(form.city) }}
                                        </div>
                                        <div class="col">
                                            {{ form_label(form.postal) }}
                                            {{ form_widget(form.postal) }}
                                        </div>
                                    </div>
                                    <div class="between-address"></div>
                                </div><!--//col-->
                                <div class="col-12 col-lg-3">
                                    <a class="btn app-btn-primary"
                                       href="https://themes.3rdwavemedia.com/bootstrap-templates/admin-dashboard/portal-free-bootstrap-admin-dashboard-template-for-developers/">
                                        <svg width="1em" height="1em" viewBox="0 0 16 16"
                                             class="bi bi-file-earmark-arrow-down me-2" fill="currentColor"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path d="M4 0h5.5v1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h1V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2z"/>
                                            <path d="M9.5 3V0L14 4.5h-3A1.5 1.5 0 0 1 9.5 3z"/>
                                            <path fill-rule="evenodd"
                                                  d="M8 6a.5.5 0 0 1 .5.5v3.793l1.146-1.147a.5.5 0 0 1 .708.708l-2 2a.5.5 0 0 1-.708 0l-2-2a.5.5 0 1 1 .708-.708L7.5 10.293V6.5A.5.5 0 0 1 8 6z"/>
                                        </svg>
                                        Free Download</a>
                                </div><!--//col-->
                            </div><!--//row-->
                        </div><!--//app-card-body-->

                    </div><!--//inner-->
                </div><!--//app-card-->

                <div class="app-card shadow-sm mb-4 border-left-decoration">
                    <div class="inner">
                        <div class="app-card-body p-3 p-lg-4">
                            <h3 class="mb-3">Ділянка</h3>
                            <div class="row gx-5 gy-3">
                                <div class="col-12 col-lg-9">
                                    <div class="row">
                                        <div class="col">
                                            {{ form_label(form.landAddress) }}
                                            {{ form_widget(form.landAddress) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_label(form.landCountry) }}
                                            {{ form_widget(form.landCountry) }}
                                        </div>
                                        <div class="col">
                                            {{ form_label(form.landRegion) }}
                                            {{ form_widget(form.landRegion) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            {{ form_label(form.landCity) }}
                                            {{ form_widget(form.landCity) }}
                                        </div>
                                        <div class="col">
                                            {{ form_label(form.landPostal) }}
                                            {{ form_widget(form.landPostal) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col col-8">
                                            {{ form_widget(form.geom) }}
                                            <div id="map" class="map"></div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col col-8 form-switch">
                                            {{ form_label(form.planingDocumentation) }}
                                            {{ form_widget(form.planingDocumentation) }}
                                        </div>
                                    </div>
                                    {{ form_rest(form) }}
                                    {{ form_end(form) }}
                                </div><!--//col-->
                            </div><!--//row-->
                        </div><!--//app-card-body-->

                    </div><!--//inner-->
                </div><!--//app-card-->
            </div><!--//container-fluid-->
        </div><!--//app-content-->

        {% include('statement/footer.html.twig') %}

    </div><!--//app-wrapper-->
{% endblock %}
