<div class="container">

    <dl class="row text-start">
        <dt class="col-sm-4">
            Прізвище
        </dt>
        <dd class="col-sm-8">
            {{ profile.lastname }}
        </dd>
    </dl>

    <dl class="row text-start">
        <dt class="col-sm-4">
            Ім'я
        </dt>
        <dd class="col-sm-8">
            {{ profile.firstname }}
        </dd>
    </dl>

    <dl class="row text-start">
        <dt class="col-sm-4">
            По-батькові
        </dt>
        <dd class="col-sm-8">
            {{ profile.middlename }}
        </dd>
    </dl>

    <dl class="row text-start">
        <dt class="col-sm-4">
            Адреса
        </dt>
        <dd class="col-sm-8">
            {{ profile.address }}
            {{ profile.oblast }}
        </dd>
    </dl>

    <dl class="row text-start">
        <dt class="col-sm-4">
            Телефон
        </dt>
        <dd class="col-sm-8">
            {{ profile.phone }}
        </dd>
    </dl>
{#            Статистичнi данi#}

    <div class="row">
        <div class="col">
            {{ form(profileForm,{'attr': {'id': 'form_person_edit'}}) }}
        </div>
    </div>
</div>

