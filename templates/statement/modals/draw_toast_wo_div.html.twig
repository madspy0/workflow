<div class="toast-header">
    {# <img src="..." class="rounded me-2" alt="..."> #}
    <strong class="me-auto">Атрибутивна інформація</strong>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
</div>
{{ form_start(form) }}
<div class="toast-body">
    {# <div class="app-card shadow-sm mb-4 border-left-decoration"> #}
    {# <div class="inner"> #}
    {# <div class="app-card-body p-3 p-lg-4"> #}
    {# <div class="row gx-5 gy-3"> #}
    {# <div class="col-12 col-lg-9"> #}

    <div class="row align-items-center" id="fio_row">
        <div class="col-5">
            <strong>Вповноважена особа (ПIБ)</strong>
        </div>
        <div class="col">
            {{ form_row(form.lastname) }}
        </div>
        <div class="col">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col">
            {{ form_row(form.middlename) }}
        </div>
    </div>

    <div class="row border border-bottom-0" style="margin-top: 10px;">
        <div class="col">
            {{ form_row(form.localGoverment) }}
        </div>
    </div>
    <div class="row border border-bottom-0 border-top-0">
        <div class="col">
            {{ form_row(form.documentsType) }}
        </div>
    </div>
    <div class="row border border-bottom-0 border-top-0">
        <div class="col">
            {{ form_row(form.numberSolution) }}
        </div>
        <div class="col">
            {{ form_row(form.solutedAt) }}
        </div>
    </div>
    <div class="row border border-top-0">
        <div class="col">
            {{ form_row(form.link) }}
        </div>
    </div>
    <div class="row border border-bottom-0" style="margin-top: 10px;">
        <div class="col">
            {{ form_row(form.address) }}
        </div>
    </div>
    <div class="row border  border-top-0">
        <div class="col">
            {{ form_row(form.useCategory) }}
        </div>
        <div class="col">
            {{ form_row(form.useSubCategory) }}
        </div>
    </div>
    <div class="row border" id="status_row" style="margin-top: 10px;">
        <div class="col col-6">
            {{ form_row(form.area) }}
            Статус: {{ drawnArea.status }}
        </div>
    </div>

    <div class="row" style="margin-top: 10px;">
        <div class="col center">
            <button type="button" class="btn btn-secondary" id="toast-close" data-bs-dismiss="toast">Close</button>
        </div>
        <div class="col center">
            {{ form_row(form.save) }}
        </div>
    </div>
    {{ form_row(form.geom) }}
</div>
{{ form_end(form) }}