<div class="toast-header">
    {# <img src="..." class="rounded me-2" alt="..."> #}
    <strong class="me-auto">Атрибутивна інформація</strong>
    <button type="button" class="btn-close mytoast-hide" data-bs-dismiss="toast" aria-label="Close"></button>
</div>
{{ form_start(form) }}
<div class="toast-body">
    {# <div class="app-card shadow-sm mb-4 border-left-decoration"> #}
    {# <div class="inner"> #}
    {# <div class="app-card-body p-3 p-lg-4"> #}
    {# <div class="row gx-5 gy-3"> #}
    {# <div class="col-12 col-lg-9"> #}

    <div class="row justify-content-between mt-3 p-2" id="fio_row">
        <div class="col gx-1">
            <strong>Вповноважена особа (ПIБ)</strong>
        </div>
        <div class="col gx-1">
            {{ form_row(form.lastname) }}
        </div>
        <div class="col gx-1">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col gx-1">
            {{ form_row(form.middlename) }}
        </div>
    </div>

    <div class="row border border-bottom-0 mt-3">
        <div class="col">
            {{ form_row(form.localGoverment) }}
        </div>
    </div>
    <div class="row border border-bottom-0 border-top-0">
        <div class="col">
            {{ form_row(form.documentsType) }}
        </div>
    </div>
    <div class="row border border-bottom-0 border-top-0">
        <div class="col">
            {{ form_row(form.numberSolution) }}
        </div>
        <div class="col">
            {{ form_row(form.solutedAt) }}
        </div>
    </div>
    <div class="row border border-top-0">
        <div class="col">
            {{ form_row(form.link) }}
        </div>
    </div>
    <div class="row border border-bottom-0 mt-3">
        <div class="col">
            {{ form_row(form.address) }}
        </div>
    </div>
    <div class="row border  border-top-0">
        <div class="col">
            {{ form_row(form.useCategory) }}
        </div>
        <div class="col">
            {{ form_row(form.useSubCategory) }}
        </div>
    </div>
    <div class="row border mt-3" id="status_row">
        <div class="col">
            <div>Статус: {{ drawnArea.status }}</div>
            <div class="d-flex align-items-center">Площа:{{ form_widget(form.area) }}</div>
        </div>
        <div class="col">
            <div>Дата створення: {{ drawnArea.createdAt| format_datetime('short','short', locale='uk') }}</div>
            <div>Дата
                редагування: {% if(drawnArea.updatedAt) %} {{ drawnArea.updatedAt| format_datetime('short','short', locale='uk') }} {% endif %}</div>
            <div>Дата
                публікації: {% if(drawnArea.publishedAt) %} {{ drawnArea.publishedAt| format_datetime('short','short', locale='uk') }} {% endif %}</div>
            <div>Дата перенесення в
                архів: {% if(drawnArea.archivedAt) %} {{ drawnArea.archivedAt| format_datetime('short','short', locale='uk') }} {% endif %}</div>
        </div>
    </div>

    <div id="toast-buttons">
        {% if workflow_has_marked_place(drawnArea, 'published') or workflow_has_marked_place(drawnArea, 'archived') %}
            {{ form_widget(form.save,{'attr':{'class':'d-none'}}) }}
        {% else %}
            {{ form_widget(form.save,{'attr':{'class':'btn-primary'}}) }}
        {% endif %}

        <button type="button"
                id="dr_drop" value="{{ drawnArea.id }}"
                class="btn btn-warning
                {% if ((drawnArea.id is null) or (workflow_can(drawnArea, 'to_archive')) or workflow_has_marked_place(drawnArea, 'archived')) %}
                d-none
                {% endif %}
                ">Видалити
        </button>

        <button type="button" class="btn btn-success
                {% if (drawnArea.id is null) or workflow_can(drawnArea, 'to_archive') or workflow_has_marked_place(drawnArea, 'archived') %}
                d-none
                {% endif %}
            " id="dr_publ" value="{{ drawnArea.id }}"
        >До ПКК
        </button>


        <button type="button" class="btn btn-danger
                {% if not workflow_has_marked_place(drawnArea, 'published') %}
                 d-none
                {% endif %}
                " id="dr_arch" value="{{ drawnArea.id }}"
        >В архів
        </button>
        <button type="button" class="btn btn-info mytoast-hide"  data-bs-dismiss="toast">Вiдмiнити</button>
    </div>
    {{ form_row(form.geom) }}
</div>
{{ form_end(form) }}
