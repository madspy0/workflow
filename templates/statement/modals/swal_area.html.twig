    <fieldset>
        <legend><span>Інформація про земельну дилянку</span></legend>
        <div class="row">
            <div class="col">
                <div class="form-field">
                    <div class="form-field__control">
                        {{ form_label(form.address) }}
                        {{ form_widget(form.address) }}
                        <div class="form-field__bar"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="select-category">Майбутнє цільове призначення</div>
            <div class="col mb-3">

                {{ form_widget(form.useCategory) }}

            </div>
            <div class="col">
                {{ form_widget(form.useSubCategory) }}
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend><span>Статус</span></legend>
        <div class="row align-items-start">
            <div class="col" id="col-area">
                <dl class="row">
                    <dt class="col-sm-4 text-start">Статус:</dt>
                    <dd class="col-sm-8">{{ drawnArea.status|trans }}</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-4 text-start">Область:</dt>
                    <dd class="col-sm-8">
                        {{ obl }}
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-4 text-start">Площа:</dt>
                    <dd class="col-sm-8">{{ form_widget(form.area) }}</dd>
                </dl>
            </div>
            <div class="col">
                <dl class="row">
                    <dt class="col-sm-6 text-start">Створення:</dt>
                    <dd class="col-sm-6">{{ drawnArea.createdAt| format_datetime('short','short', locale='uk') }}</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-6 text-start">Редагування:</dt>
                    <dd class="col-sm-6">{% if(drawnArea.updatedAt) %} {{ drawnArea.updatedAt| format_datetime('short','short', locale='uk') }} {% endif %}</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-6 text-start">Відображення на ПКК:</dt>
                    <dd class="col-sm-6 ">{% if(drawnArea.publishedAt) %} {{ drawnArea.publishedAt| format_datetime('short','short', locale='uk') }} {% endif %}</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-6 text-start">Перенесення в архів:</dt>
                    <dd class="col-sm-6">{% if(drawnArea.archivedAt) %} {{ drawnArea.archivedAt| format_datetime('short','short', locale='uk') }} {% endif %}</dd>
                </dl>
            </div>
        </div>
    </fieldset>
    {{ form_row(form.geom) }}
    {{ form_end(form) }}
