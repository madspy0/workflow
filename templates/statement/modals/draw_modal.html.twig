<div class="modal fade" tabindex="-1" id="drawmodal" role="dialog" data-backdrop="static">
    <div class="modal-dialog ">
        <div class="modal-content">
            {{ form_start(profileForm) }}
            <div class="modal-header">
                <strong>Дані для внесення ділянки</strong>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {# <div class="app-card shadow-sm mb-4 border-left-decoration"> #}
                {# <div class="inner"> #}
                {# <div class="app-card-body p-3 p-lg-4"> #}
                {# <div class="row gx-5 gy-3"> #}
                {# <div class="col-12 col-lg-9"> #}
                <div class="row justify-content-between mt-3 p-2">

                    <div class="col gx-1">

                        {{ form_row(profileForm.lastname) }}

                        {{ form_row(profileForm.firstname) }}

                        {{ form_row(profileForm.middlename) }}
                    </div>
                    <div class="col">
                        Статистичнi данi
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(profileForm.localGoverment) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(profileForm.address) }}
                    </div>
                    <div class="col">
                        {{ form_row(profileForm.phone) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(profileForm.link) }}
                    </div>
                </div>
                <div>
                    {{ form_widget(form.save,{'attr':{'class':'btn-primary'}}) }}
                </div>
            </div>
        </div>

        {# </div><!--//col--> #}
        {# </div><!--//row--> #}
        {# </div><!--//app-card-body--> #}

        {# </div><!--//inner--> #}
        {# </div><!--//app-card--> #}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        {# <button type="button" class="btn btn-primary">Save changes</button> #}
        {{ form_row(profileForm.save) }}
    </div>
    {{ form_end(profileForm) }}
</div>
</div>
</div>
