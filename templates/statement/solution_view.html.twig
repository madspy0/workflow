{% extends 'base.html.twig' %}

{% block title %}Hello StatementController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('show_map') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('show_map') }}
{% endblock %}

{% block body %}

    {% include('statement/header.html.twig') %}

    <div class="app-wrapper">
        <div class="app-content pt-3 p-md-3 p-lg-4">
            <div class="container-xl">
                <h1 class="app-page-title">Рішення</h1>
                {% if exception is defined %}
                    {{ exception.message }}
                {% endif %}
                <div class="row g-4 mb-4">
                    <div class="col-12 col-lg-6">
                        {% include('statement/address.html.twig') %}
                    </div><!--//col-->
                    <div class="col-12 col-lg-6">
                        <div class="app-card app-card-chart shadow-sm">
                            <div class="app-card-header p-3">
                                <div class="row justify-content-between align-items-center">
                                    <div class="col-auto">
                                        <h4 class="app-card-title">Призначити</h4>
                                    </div><!--//col-->
                                </div><!--//row-->
                            </div><!--//app-card-header-->
                            <div class="app-card-body p-3 p-lg-4">
                                <div>
                                    {% set solution  = developmentApplication.solution | last%}
                                    {{ solution.number }}
                                    {{ solution.solution }}
                                    {% if cc != null %}
                                        <a href="/map?cc={{ cc }}&z={{ z }}">повернутися до мапи</a>
                                    {% endif %}
                                </div>
                            </div><!--//app-card-body-->
                        </div><!--//app-card-->
                    </div><!--//col-->

                </div><!--//row-->
                {# </div> #}
                {# </div> #}
            </div>
        </div>
        {% include('statement/footer.html.twig') %}
    </div>
{% endblock %}
