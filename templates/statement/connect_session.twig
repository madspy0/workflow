{% extends 'base.html.twig' %}
{% form_theme form _self %}
{% block _form_save_row %}
    <button type="submit" id="form_save" name="form[save]"
            class="app-btn-primary btn">
        <svg width="1em" height="1em" viewBox="0 0 16 16"
             class="bi bi-file-earmark-arrow-down me-2" fill="currentColor"
             xmlns="http://www.w3.org/2000/svg">
            <path d="M4 0h5.5v1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h1V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2z"/>
            <path d="M9.5 3V0L14 4.5h-3A1.5 1.5 0 0 1 9.5 3z"/>
            <path fill-rule="evenodd"
                  d="M8 6a.5.5 0 0 1 .5.5v3.793l1.146-1.147a.5.5 0 0 1 .708.708l-2 2a.5.5 0 0 1-.708 0l-2-2a.5.5 0 1 1 .708-.708L7.5 10.293V6.5A.5.5 0 0 1 8 6z"/>
        </svg>
        Призначити
    </button>
{% endblock %}

{% block title %}Hello StatementController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('show_map') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('show_map') }}
{% endblock %}

{% block body %}

    {% include('statement/header.html.twig') %}

    <div class="app-wrapper">
        <div class="app-content pt-3 p-md-3 p-lg-4">
            <div class="container-xl">
                <h1 class="app-page-title">Заява на розробку</h1>
                {% if exception is defined %}
                    {{ exception.message }}
                {% endif %}
                <div class="row g-4 mb-4">
                    <div class="col-12 col-lg-6">
                        <div class="app-card app-card-chart shadow-sm">
                            <div class="app-card-header p-3">
                                <div class="row justify-content-between align-items-center">
                                    <div class="col-auto">
                                        <h4 class="app-card-title">Заявник</h4>
                                    </div><!--//col-->
                                </div><!--//row-->
                            </div><!--//app-card-header-->
                            <div class="app-card-body p-3 p-lg-4">
                                <div>
                                    <div>{{ developmentApplication.applicantLastname }} {{ developmentApplication.applicantFirstname }} {{ developmentApplication.applicantMiddlename }}</div>
                                    <div><small>Номер телефона:</small> {{ developmentApplication.phoneNumber }}</div>
                                    <div>{{ developmentApplication.email }}</div>
                                    <div>{{ developmentApplication.city }}</div>
                                </div>
                            </div><!--//app-card-body-->
                        </div><!--//app-card-->
<div style="height: 10px;"></div>
                        <div class="app-card app-card-chart shadow-sm">
                            <div class="app-card-header p-3">
                                <div class="row justify-content-between align-items-center">
                                    <div class="col-auto">
                                        <h4 class="app-card-title">Ділянка</h4>
                                    </div><!--//col-->
                                </div><!--//row-->
                            </div><!--//app-card-header-->
                            <div class="app-card-body p-3 p-lg-4">
                                <div>
                                    <div>{{ developmentApplication.landAddress }}</div>
                                    <div>{{ developmentApplication.landCity }}</div>
                                    <div id="map" class="map" data-geom="{{ developmentApplication.geom }}"></div>
                                </div>
                            </div><!--//app-card-body-->
                        </div><!--//app-card-->

                    </div><!--//col-->
                    <div class="col-12 col-lg-6">
                        <div class="app-card app-card-chart h-100 shadow-sm">
                            <div class="app-card-header p-3">
                                <div class="row justify-content-between align-items-center">
                                    <div class="col-auto">
                                        <h4 class="app-card-title">Призначити до сесії</h4>
                                    </div><!--//col-->
                                </div><!--//row-->
                            </div><!--//app-card-header-->
                            <div class="app-card-body p-3 p-lg-4">
                                <div>
                                    {{ form(form) }}
                                </div>
                            </div><!--//app-card-body-->
                        </div><!--//app-card-->
                    </div><!--//col-->

                </div><!--//row-->
                {# </div> #}
                {# </div> #}
            </div>
        </div>
        {% include('statement/footer.html.twig') %}
    </div>
{% endblock %}
